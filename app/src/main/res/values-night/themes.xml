<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shoppingue" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/penguin_spot_2</item>
        <item name="colorPrimaryVariant">@color/penguin_spot_1</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/penguin_twisted_spot_2</item>
        <item name="colorSecondaryVariant">@color/penguin_twisted_spot_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Shoppingue.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/penguin_dark_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="postSplashScreenTheme">@style/Theme.Shoppingue</item>
    </style>

</resources>